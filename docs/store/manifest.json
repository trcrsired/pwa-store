{
  "id": "pwa-store",
  "name": "PWA Store",
  "short_name": "PWA Store",
  "description": "Install and explore Progressive Web Apps",
  "start_url": "/store/?source=pwa",
  "scope": "/store",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "orientation": "portrait",
  "lang": "en",
  "icons": [
    {
      "src": "/store/logo/logo.webp",
      "type": "image/webp",
      "sizes": "512x512"
    },
    {
      "src": "/store/logo/logo.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "screenshots":
  [
    {
      "src": "logo/screenshot.webp",
      "sizes": "1920x1036",
      "type": "image/webp",
      "form_factor": "wide",
      "label": "desktop"
    },
    {
      "src": "logo/screenshot-mobile.webp",
      "sizes": "1080x2424",
      "type": "image/webp",
      "form_factor": "narrow",
      "label": "mobile"
    }
  ]
}
